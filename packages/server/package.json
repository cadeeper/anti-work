{
  "name": "@anti-work/server",
  "version": "1.0.0",
  "description": "Anti-Work Backend Server - 数据接收与报表服务",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_CONFIG_DIR=../../config DATABASE_URL=file:./data/anti-work.db tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "NODE_CONFIG_DIR=../../config DATABASE_URL=file:./data/anti-work.db node dist/index.js",
    "lint": "eslint src/",
    "db:generate": "DATABASE_URL=file:./data/anti-work.db prisma generate",
    "db:push": "DATABASE_URL=file:./data/anti-work.db prisma db push",
    "db:migrate": "DATABASE_URL=file:./data/anti-work.db prisma migrate dev",
    "db:seed": "DATABASE_URL=file:./data/anti-work.db tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "fastify": "^4.26.0",
    "@fastify/cors": "^9.0.0",
    "@fastify/static": "^7.0.0",
    "@fastify/jwt": "^8.0.0",
    "bcryptjs": "^2.4.3",
    "zod": "^3.22.4",
    "dayjs": "^1.11.10",
    "config": "^3.3.11",
    "dotenv": "^16.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/config": "^3.3.3",
    "@types/bcryptjs": "^2.4.6",
    "prisma": "^5.10.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
