# Anti-Work 环境变量配置
# 复制此文件为 .env 并修改配置

# =============================================================================
# 服务端配置
# =============================================================================

# 服务器端口
SERVER_PORT=3000

# 服务器地址（0.0.0.0 表示所有网络接口）
SERVER_HOST=0.0.0.0

# 数据库连接（本地开发使用 SQLite）
DATABASE_URL=file:./data/anti-work.db

# JWT 密钥（生产环境必须修改）
JWT_SECRET=change-this-in-production

# JWT 过期时间
JWT_EXPIRES_IN=7d

# =============================================================================
# 认证配置
# =============================================================================

# 是否启用认证（true/false）
AUTH_ENABLED=false

# 管理员密码（启用认证后使用）
ADMIN_PASSWORD=

# =============================================================================
# 工作时间配置
# =============================================================================

# 工作时间开始
WORK_TIME_START=09:00

# 工作时间结束
WORK_TIME_END=18:00

# 午休开始
LUNCH_BREAK_START=12:00

# 午休结束
LUNCH_BREAK_END=14:00

# 周末是否算加班（true/false）
WEEKEND_IS_OVERTIME=true
