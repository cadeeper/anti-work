{
  "name": "anti-work",
  "version": "1.0.0",
  "description": "工作轨迹记录与分析系统",
  "private": true,
  "scripts": {
    "dev": "./scripts/dev.sh",
    "dev:server": "pnpm --filter @anti-work/server dev",
    "dev:web": "pnpm --filter @anti-work/web dev",
    "dev:all": "turbo run dev --filter=@anti-work/server --filter=@anti-work/web --parallel",
    "build": "turbo run build",
    "build:extension": "./scripts/build-extension.sh",
    "build:agent": "./scripts/build-agent.sh",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "db:generate": "pnpm --filter @anti-work/server db:generate",
    "db:push": "pnpm --filter @anti-work/server db:push",
    "db:migrate": "pnpm --filter @anti-work/server db:migrate",
    "db:seed": "pnpm --filter @anti-work/server db:seed",
    "docker:start": "./scripts/docker-start.sh",
    "agent:install": "./scripts/install-agent.sh",
    "extension:build": "./scripts/build-extension-prod.sh"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
